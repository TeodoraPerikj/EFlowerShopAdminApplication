@model EFlowerShopAdminApplication.Models.Order
    
    <style>
        body {
            background-image: url('https://i.pinimg.com/736x/7e/7f/15/7e7f15a45c80b836f21ae5a27eed1562.jpg');
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: 1370px;
        }
    </style>
    <div class="container">

        <p>
            <a class="btn btn-warning">@Model.User.Email - @Model.User.FirstName @Model.User.LastName</a>
        </p>

        @for (int i = 0; i < Model.FlowerInOrders.Count(); i++)
        {
            var item = Model.FlowerInOrders.ElementAt(i);

            if (i % 3 == 0)
            {
                @:<div class="row">
                }

                <div class="col-md-3 m-4">
                    <div class="card" style="width: 16rem; height: 39rem;">
                        <img class="card-img-top" src="@item.Flower.FlowerImage" style="height: 45%;" alt="Image for flower!">

                        <div class="card-body">
                            <h3 class="card-title text-center">@item.Flower.FlowerName</h3>
                            <h6 class="card-text">@item.Flower.FlowerDescription</h6>


                            <h5>Price: $@item.Flower.FlowerPrice</h5>
                            <h5>Quantity: @item.Quantity</h5>
                            <hr />
                            <h5 class="font-weight-bold">Total: $@(item.Flower.FlowerPrice * item.Quantity)</h5>
                        </div>

                    </div>
                </div>


                if (i % 3 == 2)
                {
                @:</div>
            }
        }
    </div>
    <div style="margin-left: 40px;">
        <a asp-action="Index" asp-controller="Order" class="btn btn-primary">Back</a>
    </div>