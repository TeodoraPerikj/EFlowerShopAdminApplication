@model List<EFlowerShopAdminApplication.Models.Order>
    
    <style>
        body {
            background-image: url('https://t3.ftcdn.net/jpg/03/39/02/80/360_F_339028035_iZIEEgpheA9GT6ktDQYracoI5nGchaWF.jpg');
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: 1370px;
        }
    </style>
    <div class="container">

        <div class="row">
            <a class="btn btn-outline-danger" asp-controller="Order" asp-action="ExportAllOrders">Export Orders</a>
        </div>

        <table class="table mt-5">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Customer Details</th>
                    <th scope="col">Number of Flowers</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    var item = Model[i];

                    <tr>
                        <th scope="row">@(i+1)</th>
                        <td class="font-weight-bold">@item.User.Email - @item.User.FirstName  @item.User.LastName</td>
                        <td class="font-weight-bold">@item.FlowerInOrders.Count()</td>
                        <td><a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Details for Order</a></td>
                        <td><a class="btn btn-outline-primary" asp-action="CreateInvoice" asp-route-id="@item.Id">Create Invoice</a></td>
                    </tr>

                }
            </tbody>


        </table>
        <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Back</a>
    </div>